@using System.Reflection
@using System.Web.Mvc.Html
@using SSW.HealthCheck.Mvc5

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SSW HealthCheck</title>

    <link type="text/css" href="@Url.Content("~/Content/healthcheck/healthcheck.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Content/healthcheck/bootstrap.min.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Content/healthcheck/angular-csp.css")" rel="stylesheet" />
    <link rel="icon" type="image/png" href="/ssw/include/pigeon/img/favicon-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="/ssw/include/pigeon/img/favicon-160x160.png" sizes="160x160">
    <link rel="icon" type="image/png" href="/ssw/include/pigeon/img/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="/ssw/include/pigeon/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/ssw/include/pigeon/img/favicon-32x32.png" sizes="32x32">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img class="navbar-brand" src="@Url.Content("~/Content/healthcheck/healthCheck.png")" width="200">
            </div>
            <div class="navbar-collapse collapse">
                @RenderSection("stats", required: false)
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <img style="vertical-align: middle; width: 50px" src="@Url.Content("~/Content/healthcheck/ssw.png")"> Powered by <a href="http://www.sswhealthcheck.com">SSW HealthCheck v@(Assembly.GetAssembly(typeof(SSW.HealthCheck.Infrastructure.Tests.NotDebugTest)).GetName().Version)</a></p>
        </footer>
    </div>

    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/jquery-1.10.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/modernizr-2.6.2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/healthcheck/angular.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentWithWildcard("~/Scripts", @"jquery\.signalR-\d{1,3}\.\d{1,3}\.\d{1,3}\.js", "jquery.signalR-2.1.1.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/SignalR/hubs")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/ssw.healthcheck.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
